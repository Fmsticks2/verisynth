# Pinata Configuration
# Get your JWT token from https://app.pinata.cloud/keys
VITE_PINATA_JWT=your_pinata_jwt_token_here

# Optional: Pinata Gateway URL (defaults to gateway.pinata.cloud)
VITE_PINATA_GATEWAY_URL=gateway.pinata.cloud

# Optional: API Key and Secret (JWT takes precedence if both are provided)
VITE_PINATA_API_KEY=your_pinata_api_key_here
VITE_PINATA_SECRET_API_KEY=your_pinata_secret_key_here

# Optional: File Upload Limits (in bytes)
VITE_MAX_FILE_SIZE=104857600  # 100MB default

# Optional: Rate Limiting Configuration
VITE_PINATA_RATE_LIMIT_CALLS=10  # calls per window
VITE_PINATA_RATE_LIMIT_WINDOW=60000  # window in milliseconds (1 minute)

# Development Configuration
VITE_ENABLE_IPFS_SIMULATION=false  # Set to true for development without real uploads